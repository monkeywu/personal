/*     openpage      */
.openpage
	width 100%
	height 650px
	background-image url('../image/1.jpg')
	background-size cover
	position relative
	z-index 100
	.opentitle
		position relative
		top 25%
		text-align center
		transform rotate(-45deg)
		width 75%
		margin 0 auto
		.left,.right
			font-size 62px
			display block
			margin 0 auto
			color rgb(123, 26, 37)
		.left
			padding-left  10%
			width 50%
		.right 
			padding-right 20%
			width 80%
/*       all        */
@import url(https://fonts.googleapis.com/css?family=Montserrat);

ul
	margin 0
	padding 0
li
	list-style none
a
	display block
	transition all 0.3s
	&:hover
		text-decoration none
.open
	display none
/*       header       */
.header
	height 71px
	position relative
#header
	position fixed
	background white
	width 100%
.me
	float left
	font-size 24px
	margin 2% 5%
	letter-spacing 1px
	a
		color #333
		&:hover
				color #777
.nav
	float right
	font-size 24px
	margin 2% 5%
	letter-spacing 1px
	li
		float left
		a
			padding 0 10px
			color #777
			&:hover
				color #36d0d8
/*       content       */
.container-fluid
	text-align center
	padding-top 70px
	padding-bottom 70px
.content	
	background #58a
	background linear-gradient(-45deg, transparent , #58a 0) right, linear-gradient(45deg, transparent , #655 0) left
	background-size 50% 100%
	background-repeat no-repeat

	h3
		margin 40px 0
		font-size 32px
	.avatar
		height 350px
		width 350px
		border 1px solid 
		background-image url('../image/2.jpg')
		background-size cover
		background-repeat no-repeat
		background-position center
		border-radius 350px
		margin 0 auto
		transition all 0.5s
		&:hover
			filter: grayscale(100%)
.content2
	background #dad8d8
	h3
		margin-bottom 55px
	.count
		width 100px
		height 100px
		border 1px solid black
		border-radius 100px
		line-height 100px
		margin 0 auto
		transition all 0.4s
		&:hover
			background-color black
			color white
	p
		margin-top 25px
		font-size 16px
		letter-spacing 1px

.description
	font-size 20px
	margin 40px 0
.content3
	background-image url('../image/101.jpg')
	background-attachment fixed
	color white
	p
		margin-top 50px

.line-1{
    position: relative;
    margin: 0 auto;
    border-right: 2px solid  rgba(255,255,255,.75);
    text-align: center;
    white-space: nowrap;
    overflow: hidden;  
    font-size:28px;
    font-weight:bold;  
}

/* Animation */
.anim-typewriter{
  animation: typewriter 4s steps(44) 1s 1 normal both,
             blinkTextCursor 500ms steps(44) infinite normal;
}
@keyframes typewriter{
  from{width: 0;}
  to{width: 24em;}
}
@keyframes blinkTextCursor{
  from{border-right-color: rgba(255,255,255,.75);}
  to{border-right-color: transparent;}
}

